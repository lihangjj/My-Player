<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbar">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/maincontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/tab"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/yi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="onclick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shipin_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/tabnormal" />

            <TextView
                android:id="@+id/shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地视频"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/er"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="onclick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yinyue_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/tabnormal" />

            <TextView
                android:id="@+id/yinyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/san"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            android:onClick="onclick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/net_shipin_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/tabnormal" />

            <TextView
                android:id="@+id/net_shipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联网视频"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/si"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            android:onClick="onclick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/net_yinyue_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/tabnormal" />

            <TextView
                android:id="@+id/net_yinyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联网音乐"
                android:textColor="@android:color/background_dark"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
